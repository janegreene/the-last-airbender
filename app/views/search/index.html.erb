There are <%= @members.count %> members of the <%= @view_nation %>

<% @members.each do |member| %>
<section class="member">
  <h3 class="name"><%= member.name %></h3>
  <div class="photo"><%= image_tag("#{member.photo}") %></div>
  <div class="affiliation"><%= member.affiliation%></div>
  <div class="allies">
    <ul>
      <% member.allies.each do |ally| %>
        <li><%= ally %></li>
      <%end %>
    </ul>
  </div>
  <div class="enemies">
    <ul>
      <% member.enemies.each do |enemy| %>
        <li><%= enemy %></li>
      <%end %>
    </ul>
  </div>
</section>
  <%end %>
